set mbox_type = Maildir
set wait_key = no
set include = yes
set save_name = yes
set force_name = yes
set tmpdir='/dev/shm'

set nomark_old
set beep_new

set sort = threads
set sort_aux = last-date-received
set send_charset = "utf-8"
set uncollapse_jump
set assumed_charset = "koi8-r"
set editor = "vim -c 'set syntax=mail ft=mail enc=utf-8'"
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
set quit = ask-no

set status_chars = ' +oA'
set status_format="./.mutt/mutt-status $my_status_format '---[ Folder: %f ]---[ %r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%>-%?p?( %p postponed )?---'|"

bind index y next-unread
bind index Y next-unread-mailbox

macro index \cu |urlview\n
macro pager \cu |urlview\n

auto_view text/html
set implicit_autoview

unset move
set mail_check = 0
set sleep_time = 0
set sendmail_wait = -1
set timeout = 1
set connect_timeout = 1
set read_inc = 1000
set write_inc = 1000

set pipe_decode
set index_format = '%Z %{%b %d} %-20.20L %s%?M? (#%M)?'
alternative_order text/enriched text/plain text/html
folder-hook . "exec collapse-all"

ignore *
unignore Subject: From: To: Cc: Bcc: Reply-To: Date:
unhdr_order *
hdr_order Subject: From: To: Cc: Bcc: Reply-To: Date:

# Colors
color status brightwhite default
color indicator brightgreen default

# URLs
color body brightgreen default "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body brightgreen default "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

## Email addresses.
color body brightgreen default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

## Header
color header green default "^from:"
color header green default "^to:"
color header green default "^cc:"
color header green default "^bcc:"
color header green default "^date:"
color header yellow default "^reply-to:"
color header brightcyan default "^subject:"

## Coloring quoted text - coloring the first 7 levels:
color quoted cyan default
color quoted1 yellow default
color quoted2 red default
color quoted3 green default
color quoted4 cyan default
color quoted5 yellow default
color quoted6 red default
color quoted7 green default
